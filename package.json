{
    "name": "load-available-actions",
    "version": "0.0.1",
    "private": false,
    "description": "GitHub Action to load all available runner information for an organization",
    "main": "lib/main.js",
    "scripts": {
        "esbuild": "esbuild src/main.ts --bundle --outdir=dist --platform=node --external:vscode --external:@vscode/test-electron --external:jest",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "lint": "eslint src/**/*.ts",
        "package": "npm run esbuild",
        "test": "jest --passWithNoTests",
        "all": "npm run esbuild && npm run test # && npm run lint"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devops-actions/load-runner-info.git"
    },
    "keywords": [
        "GitHub Actions",
        "Load available runner information from a GitHub organization"
    ],
    "author": "@rajbos",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.11.1",
        "moment": "^2.30.1",
        "octokit": "^5.0.3",
        "yaml": "^2.8.0"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^24.0.7",
        "@typescript-eslint/eslint-plugin": "^8.35.0",
        "@typescript-eslint/parser": "^8.35.0",
        "@vercel/ncc": "^0.38.3",
        "ansi-regex": ">=6.1.0",
        "dotenv": "^17.0.0",
        "esbuild": "^0.25.5",
        "eslint": "^9.30.0",
        "eslint-plugin-github": "^6.0.0",
        "eslint-plugin-jest": "^29.0.1",
        "jest": "^29.7.0",
        "js-yaml": "^4.1.0",
        "prettier": "3.6.2",
        "tmpl": ">=1.0.5",
        "ts-jest": "^29.4.0",
        "typescript": "^5.8.3"
    },
    "optionalDependencies": {
        "fsevents": "^2.3.3"
    }
}
